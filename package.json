{
  "name": "typescript-ws-template",
  "version": "1.0.0",
  "description": "Typescript template using Luke Autry's tsoa for REST service deployed to GAE",
  "repository": "https://github.com/cipherzzz/typescript-ws-template",
  "author": "Mark Mathis <dev@@cipherz.com>",
  "license": "MIT",
  "scripts": {
    "precommit": "yarn build:api && lint-staged && yarn lint",
    "lint": "tslint --project tsconfig-base.json -t codeFrame",
    "start-dev": "ts-node -P tsconfig-base.json ./dev/start-dev.ts",
    "start": "node ./api/dist/start-server",
    "build:api": "yarn tsc -p ./api/tsconfig.json",
    "start:api": "yarn build:api && yarn tsoa:gen && node ./api/dist/start-server.js",
    "tsoa:gen": "yarn tsoa swagger -c ./api/tsoa.json && yarn tsoa routes -c ./api/tsoa.json",
    "typeorm": "ts-node -P ./api/tsconfig.json ./node_modules/.bin/typeorm",
    "db:migrate": "ts-node -P ./tsconfig-base.json ./dev/db/migrate.ts",
    "db:update": "yarn typeorm migration:run",
    "db:drop": "yarn typeorm schema:drop",
    "test": "cross-env TS_NODE_PROJECT=./api/tsconfig.json mocha -t 15000 -r ts-node/register \"./api/**/*.spec.ts\""
  },
  "dependencies": {
    "@types/dotenv": "^6.1.0",
    "@types/knex": "^0.15.1",
    "body-parser": "^1.18.3",
    "chalk": "^2.4.1",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "ioredis": "^4.2.0",
    "knex": "^0.16.3",
    "method-override": "^3.0.0",
    "moment": "^2.22.2",
    "nodemon": "^1.18.9",
    "pg": "^7.7.1",
    "reflect-metadata": "^0.1.12",
    "superagent": "^4.0.0",
    "tsoa": "^2.3.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.7",
    "@types/chokidar": "^1.7.5",
    "@types/express": "^4.16.0",
    "@types/ioredis": "^4.0.4",
    "@types/method-override": "^0.0.31",
    "@types/minimatch": "^3.0.3",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.9",
    "@types/readline-sync": "^1.4.3",
    "@types/superagent": "^3.8.4",
    "chai": "^4.2.0",
    "chokidar": "^2.0.4",
    "cross-env": "^5.2.0",
    "docker-compose": "^0.9.2",
    "husky": "^0.14.3",
    "keypress": "^0.2.1",
    "lint-staged": "^7.2.2",
    "minimatch": "^3.0.4",
    "mocha": "^5.2.0",
    "node-sass": "^4.10.0",
    "prettier": "^1.14.2",
    "readline-sync": "^1.4.9",
    "ts-loader": "^5.3.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-config-standard": "^7.1.0",
    "tslint-loader": "^3.5.4",
    "tslint-microsoft-contrib": "^5.1.0",
    "typescript": "^3.1.6"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write --print-width 80 --tab-width 4 --trailing-comma all --arrow-parens always",
      "git add"
    ]
  }
}
