{
  "name": "ts-app",
  "version": "1.0.0",
  "description": "Boilerplate project for a TypeScript API (Express, tsoa) + UI (React/TSX)",
  "repository": "https://github.com/lukeautry/ts-app",
  "author": "Luke Autry <lukeautry@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "ts-node -P tsconfig-base.json ./start.ts",
    "start-dev": "ts-node -P tsconfig-base.json ./dev/start-dev.ts",
    "build:api": "yarn tsc -p ./api/tsconfig.json",
    "start:api": "yarn build:api && yarn tsoa:gen && node ./api/dist/start-server.js",
    "tsoa:gen": "yarn tsoa swagger -c ./api/tsoa.json && yarn tsoa routes -c ./api/tsoa.json",
    "typeorm": "ts-node -P ./api/tsconfig.json ./node_modules/.bin/typeorm",
    "db:migrate": "ts-node -P ./tsconfig-base.json ./dev/db/migrate.ts",
    "db:update": "yarn typeorm migration:run",
    "db:drop": "yarn typeorm schema:drop",
    "test": "cross-env TS_NODE_PROJECT=./api/tsconfig.json mocha -t 15000 -r ts-node/register \"./api/**/*.spec.ts\""
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "chalk": "^2.4.1",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "ioredis": "^4.2.0",
    "method-override": "^3.0.0",
    "moment": "^2.22.2",
    "pg": "^7.6.1",
    "reflect-metadata": "^0.1.12",
    "superagent": "^4.0.0",
    "tsoa": "^2.3.0",
    "typeorm": "^0.2.9"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.7",
    "@types/chalk": "^2.2.0",
    "@types/chokidar": "^1.7.5",
    "@types/express": "^4.16.0",
    "@types/ioredis": "^4.0.4",
    "@types/method-override": "^0.0.31",
    "@types/minimatch": "^3.0.3",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.9",
    "@types/readline-sync": "^1.4.3",
    "@types/superagent": "^3.8.4",
    "chai": "^4.2.0",
    "chokidar": "^2.0.4",
    "cross-env": "^5.2.0",
    "docker-compose": "^0.9.2",
    "keypress": "^0.2.1",
    "minimatch": "^3.0.4",
    "mocha": "^5.2.0",
    "node-sass": "^4.10.0",
    "readline-sync": "^1.4.9",
    "sass-loader": "^7.1.0",
    "ts-loader": "^5.3.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-loader": "^3.5.4",
    "typescript": "^3.1.6"
  }
}
